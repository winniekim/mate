<div class="container" style="padding: 20px 0px;">
  <div class="row" style="">
    <div class="card col-3">
    
      <div class="card-body">
        <div class="container p-0 text-center" style="position: relative; top: 40%;">
          <%= link_to new_diary_path do %>
          <%= image_tag 'add.png', class: 'img-responsive w-50' %>
          <p class="mt-3">다이어리 쓰기</p>
          <% end %>
        </div>
      </div>
    
    
    </div>
        <% Diary.all.each do |d| %>

            <div class="card col-3">
              <div class="view overlay">
                <img class="card-img-top" src="https://img.momtalk.kr/image/information/2018/02/02/1517581280.jpg" alt="Card image cap">
                <a>
                  <div class="mask rgba-white-slight"></div>
                </a>
              </div>
              <div class="card-body">
                <h4 class="card-title"><%= d.title %></h4>
                <hr>
                <p class="card-text"><%= d.content %></p>
                <p class="card-text" style="text-align: right; text-align: bottom;"><%= current_user.username %></p>
              </div>
              <div class="card-action" style="text-align: right;">
                <center><a href="#">좋아요</a> <a href="#">댓글 달기</a>
                <%= link_to '삭제하기', diary_path(id: d.id), method: 'DELETE' %></center>
              </div>

            </div>
          
        <% end %>
  </div>
  
</div>

<hr>

